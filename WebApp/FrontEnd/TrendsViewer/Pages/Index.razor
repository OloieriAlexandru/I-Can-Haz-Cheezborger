@page "/"
@inherits IndexBase
@using Syncfusion.Blazor.Notifications


<SfToast Title="Wellcome fellow user!" Content=@ToastContentLoggedIn @ref="ToastObjLoggedIn">
    <ToastPosition X="Right" Y="Bottom"></ToastPosition>
</SfToast>

<SfToast Title="You are not logged in!" Content=@ToastContentLoggedOut @ref="ToastObjLoggedOut">
    <ToastPosition X="Right" Y="Bottom"></ToastPosition>
</SfToast>

<h3 style="display:inline-block">
    Welcome
    @if (AuthService.IsLoggedIn())
    {
        @AuthService.GetUsername();
    }
    ! Find a trend to follow
</h3>
<span>

    <div style="display:inline-block;margin-left:10px">
        <a href="@($"trends")" class="btn btn-primary create-trend-button" style="margin-top:-10px" type="submit">
            <i class="fas fa-arrow-circle-right"></i>
        </a>
    </div>
</span>

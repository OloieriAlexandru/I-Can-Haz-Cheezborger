@using TrendsViewer.Services.Abstractions
@inject IAuthService AuthService
@page "/"

<h3 style="display:inline-block">Welcome! @if (AuthService.IsLoggedIn()) { AuthService.Initialize();  AuthService.GetUsername(); }  Find a trend to follow </h3>
<span>
    <div style="display:inline-block;margin-left:10px">
        <a href="@($"trends")" class="btn btn-primary create-trend-button" style="margin-top:-10px" type="submit">
            <i class="fas fa-arrow-circle-right"></i>
        </a>
    </div>
</span>

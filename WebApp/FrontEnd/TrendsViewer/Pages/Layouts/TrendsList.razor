@page "/trends"
@inherits TrendsListBase

<h3>Trends List</h3>

<div class="card-deck">
    @if (Trends == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    { 
        foreach (var trend in Trends)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
                <div class="card-header">
                    <h3>@trend.Name</h3>
                </div>
                <div class="card-footer text-center">
                    <a href="@($"trends/{trend.Id}")" class="btn btn-primary m-1">View</a>

                    <a href="@($"trends/edit/{trend.Id}")" class="btn btn-primary m-1">Edit</a>

                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
                        
            </div>
        }
    }
</div>

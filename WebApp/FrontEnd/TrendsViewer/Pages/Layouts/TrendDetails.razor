@page "/trends/{Id}"
@inherits TrendDetailsBase

@if (Trend == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1> @Trend.Name </h1>
                </div>
                <div class="card-footer text-center">
                    <a href="/trends" class="btn btn-primary">Back</a>

                    <a href="@($"trends/edit/{Trend.Id}")" class="btn btn-primary">Edit</a>

                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>

    </div>

    <EditForm Model="@editTrendModel">
        <div class="form-group row">
            <label for="Name" class="col-sm-2 col-form-label">
                Create a new post
            </label>
            <div class="col-sm-10">
                <InputText @bind-Value="editTrendModel.Name"></InputText>
            </div>

            <button class="btn btn-primary" type="submit" @onclick="@(() => HandleValidSubmit(editTrendModel.Name))">Create</button>
        </div>
    </EditForm>

    <div class="card-deck">
        @if (Posts == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            foreach (var post in Posts)
            {
                <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
                    <div class="card-header">
                        <h3>@post.Title</h3>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@($"trends/{Trend.Id}/posts/{post.Id}")" class="btn btn-primary m-1">View</a>

                        <a href="@($"trends/edit/{post.Id}")" class="btn btn-primary m-1">Edit</a>

                        <a href="#" class="btn btn-danger m-1">Delete</a>
                    </div>

                </div>
            }
        }
    </div>
}
